{% extends 'base.html.twig' %}

{% block title %}Hello ControllaController!{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-12">   

        <a class="btn btn-primary" href="/controlla">Retour</a> 
        <img src="https://via.placeholder.com/150" alt="...">

        <h1>{{post.title}}</h1>
        <p>{{post.content}}</p>
        <p class="card-text">{{post.author}}</p>

        <p class="card-text">{{post.createdAt | date("d/m/Y")}}</p>
        </div>

    </div>
    <div class="row">
        <div class="col-md-3">
            {{form(form)}}
        </div>
        <div class="col-md-9">

        {% for comment in post.comments %}
            <div class="card">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{comment.Author}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{comment.createdAt | date("d/m/Y")}}</h6>
                    <p class="card-text">{{comment.content}}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
            </div>
        {% endfor %}

        </div>
    </div>
</div>

{% endblock %}
